@model EventHub.Models.Entities.Event
@{
    ViewData["Title"] = "Edit Event - EventHub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/organizer-create-event.css" asp-append-version="true" />
}

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <div class="header-content">
            <div class="header-text">
                <h1 class="page-title"><i class="bi bi-pencil-square me-3"></i>Edit Event</h1>
                <p class="page-subtitle">Update your event details</p>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Organizer")">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("MyEvents", "Organizer")">My Events</a></li>
                        <li class="breadcrumb-item active">Edit Event</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- Edit Event Form -->
<section class="create-event-section py-5">
    <div class="container">
        @if (ViewBag.BookingCount > 0)
        {
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Note:</strong> This event has @ViewBag.BookingCount booking(s). 
                Be careful when making changes as it may affect existing bookings.
            </div>
        }

        <form asp-action="Edit" asp-controller="Organizer" asp-route-id="@Model.Id" method="post" 
              enctype="multipart/form-data" id="createEventForm" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />
            <input asp-for="CreatedAt" type="hidden" />
            <input asp-for="OrganizerId" type="hidden" />
            <input asp-for="TotalTickets" type="hidden" />
            
            <div class="row g-4">
                <!-- Left Column - Form Fields -->
                <div class="col-lg-8">
                    
                    <!-- Basic Information -->
                    <div class="form-section">
                        <div class="section-header">
                            <h5 class="section-title">
                                <i class="bi bi-info-circle me-2"></i>Basic Information
                            </h5>
                            <p class="section-subtitle">Essential details about your event</p>
                        </div>
                        <div class="section-content">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="Title" class="form-label required">Event Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Enter a compelling event title" 
                                           maxlength="100" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                    <small class="text-muted">
                                        <span id="titleCount">@Model.Title?.Length</span>/100 characters
                                    </small>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="Category" class="form-label required">Category</label>
                                    <select asp-for="Category" class="form-select" required>
                                        <option value="">Select category</option>
                                        <option value="Music">Music & Concerts</option>
                                        <option value="Technology">Technology & Innovation</option>
                                        <option value="Business">Business & Networking</option>
                                        <option value="Arts">Arts & Culture</option>
                                        <option value="Sports">Sports & Fitness</option>
                                        <option value="Food">Food & Drink</option>
                                        <option value="Education">Education & Learning</option>
                                        <option value="Entertainment">Entertainment</option>
                                        <option value="Health">Health & Wellness</option>
                                        <option value="Family">Family & Kids</option>
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">Event Status</label>
                                    <select asp-for="IsActive" class="form-select">
                                        <option value="true">Active (Published)</option>
                                        <option value="false">Draft (Hidden)</option>
                                    </select>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Description" class="form-label required">Event Description</label>
                                    <textarea asp-for="Description" class="form-control" rows="5" 
                                              placeholder="Describe your event in detail..." maxlength="1000" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <small class="text-muted">
                                        <span id="descriptionCount">@Model.Description?.Length</span>/1000 characters
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Date & Time -->
                    <div class="form-section">
                        <div class="section-header">
                            <h5 class="section-title">
                                <i class="bi bi-calendar-event me-2"></i>Date & Time
                            </h5>
                            <p class="section-subtitle">When will your event take place?</p>
                        </div>
                        <div class="section-content">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="EventDate" class="form-label required">Event Date</label>
                                    <input asp-for="EventDate" type="date" class="form-control" 
                                           value="@Model.EventDate.ToString("yyyy-MM-dd")" required />
                                    <span asp-validation-for="EventDate" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="EventTime" class="form-label required">Event Time</label>
                                    <input asp-for="EventTime" type="time" class="form-control" 
                                           value="@Model.EventTime.ToString(@"hh\:mm")" required />
                                    <span asp-validation-for="EventTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Venue Information -->
                    <div class="form-section">
                        <div class="section-header">
                            <h5 class="section-title">
                                <i class="bi bi-geo-alt me-2"></i>Venue Information
                            </h5>
                            <p class="section-subtitle">Where will your event be held?</p>
                        </div>
                        <div class="section-content">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label asp-for="VenueId" class="form-label required">Select Venue</label>
                                    <select asp-for="VenueId" class="form-select" required>
                                        <option value="">Choose a venue...</option>
                                        @if (ViewBag.Venues != null)
                                        {
                                            foreach (var venue in ViewBag.Venues)
                                            {
                                                <option value="@venue.Id" selected="@(venue.Id == Model.VenueId)">
                                                    @venue.Name - @venue.Location (Capacity: @venue.Capacity)
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="VenueId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Ticket Pricing -->
                    <div class="form-section">
                        <div class="section-header">
                            <h5 class="section-title">
                                <i class="bi bi-ticket-perforated me-2"></i>Ticket Pricing
                            </h5>
                            <p class="section-subtitle">Set up your ticket pricing and availability</p>
                        </div>
                        <div class="section-content">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="TicketPrice" class="form-label required">Ticket Price (Rs.)</label>
                                    <input asp-for="TicketPrice" type="number" class="form-control" 
                                           placeholder="0.00" min="0" step="0.01" required />
                                    <span asp-validation-for="TicketPrice" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="AvailableTickets" class="form-label required">Available Tickets</label>
                                    <input asp-for="AvailableTickets" type="number" class="form-control" 
                                           placeholder="Number of tickets" min="0" required />
                                    <span asp-validation-for="AvailableTickets" class="text-danger"></span>
                                    <small class="text-muted">
                                        @(Model.TotalTickets - Model.AvailableTickets) tickets already sold
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Event Image -->
                    <div class="form-section">
                        <div class="section-header">
                            <h5 class="section-title">
                                <i class="bi bi-image me-2"></i>Event Image
                            </h5>
                            <p class="section-subtitle">Update event poster (optional)</p>
                        </div>
                        <div class="section-content">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="current-image mb-3">
                                    <label class="form-label">Current Image:</label>
                                    <img src="@Model.ImageUrl" alt="Current event image" class="img-thumbnail" style="max-width: 300px;" />
                                </div>
                            }
                            
                            <div class="image-upload-area" id="imageUploadArea">
                                <input type="file" id="eventImage" name="eventImage" accept="image/*" class="d-none" />
                                <div class="upload-placeholder">
                                    <i class="bi bi-cloud-upload"></i>
                                    <h6>Click to upload new image or drag and drop</h6>
                                    <p>PNG, JPG up to 10MB (Leave empty to keep current image)</p>
                                </div>
                                <div class="image-preview d-none" id="imagePreview">
                                    <img id="previewImage" src="" alt="Preview" />
                                    <button type="button" class="btn btn-sm btn-danger remove-image">
                                        <i class="bi bi-x"></i> Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="form-actions">
                        <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </button>
                        
                        @if (ViewBag.BookingCount == 0)
                        {
                            <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.Id)">
                                <i class="bi bi-trash me-2"></i>Delete Event
                            </button>
                        }
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Update Event
                        </button>
                    </div>
                </div>

                <!-- Right Column - Preview -->
                <div class="col-lg-4">
                    <div class="preview-card sticky-top">
                        <div class="preview-header">
                            <h6 class="preview-title">
                                <i class="bi bi-eye me-2"></i>Event Preview
                            </h6>
                            <small class="text-muted">How your event will appear to customers</small>
                        </div>
                        <div class="preview-content">
                            <div class="preview-image">
                                <img id="previewCardImage" src="@(Model.ImageUrl ?? "/images/events/default-event.jpg")" alt="Event Preview" />
                                <div class="preview-badge">
                                    <span id="previewCategory">@Model.Category</span>
                                </div>
                            </div>
                            <div class="preview-details">
                                <h5 id="previewTitle">@Model.Title</h5>
                                <div class="preview-info">
                                    <div class="info-item">
                                        <i class="bi bi-calendar"></i>
                                        <span id="previewDate">@Model.EventDate.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="bi bi-clock"></i>
                                        <span id="previewTime">@Model.EventTime.ToString(@"hh\:mm tt")</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="bi bi-geo-alt"></i>
                                        <span id="previewVenue">@Model.Venue?.Name</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="bi bi-ticket"></i>
                                        <span id="previewTickets">@Model.AvailableTickets tickets</span>
                                    </div>
                                </div>
                                <div class="preview-price">
                                    <span class="price-label">Starting from</span>
                                    <span class="price-value">Rs. <span id="previewPrice">@Model.TicketPrice.ToString("F2")</span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Delete Form (Hidden) -->
        <form id="deleteForm" asp-action="Delete" asp-controller="Organizer" method="post" class="d-none">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" id="deleteEventId" />
        </form>
    </div>
</section>

@section Scripts {
    <script src="~/js/organizer-edit-event.js" asp-append-version="true"></script>
    <script>
        function confirmDelete(eventId) {
            if (confirm('Are you sure you want to delete this event? This action cannot be undone.')) {
                document.getElementById('deleteEventId').value = eventId;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}