@model List<EventHub.Models.Entities.Ticket>
@{
    ViewData["Title"] = "My Tickets - EventHub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/view-ticket.css" asp-append-version="true" />
}


<div class="tickets-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="bi bi-qr-code me-3"></i>Your Digital Tickets
                </h1>
                <p class="page-subtitle">
                    Show QR code at venue entrance for easy check-in
                </p>
            </div>
        </div>
    </div>

    <div class="container">
        @if (Model != null && Model.Any())
        {
            var firstTicket = Model.First();
            var booking = firstTicket.Booking;
            var eventInfo = booking.Event;
            var venue = eventInfo.Venue;

            <!-- Event Information Card -->
            <div class="booking-info-card">
                <div class="event-details">
                    @if (!string.IsNullOrEmpty(eventInfo.ImageUrl))
                    {
                        <img src="@eventInfo.ImageUrl" alt="@eventInfo.Title" class="event-image">
                    }
                    else
                    {
                        <div class="event-image" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-calendar-event" style="font-size: 3rem; color: white;"></i>
                        </div>
                    }

                    <div class="event-info">
                        <h3>@eventInfo.Title</h3>
                        <div class="event-meta">
                            <div class="meta-item">
                                <i class="bi bi-calendar-event"></i>
                                <span>@eventInfo.EventDate.ToString("dddd, MMMM dd, yyyy")</span>
                            </div>
                            <div class="meta-item">
                                <i class="bi bi-clock"></i>
                                <span>@eventInfo.EventDate.ToString("hh:mm tt")</span>
                            </div>
                            <div class="meta-item">
                                <i class="bi bi-geo-alt"></i>
                                <span>@venue.Name, @venue.Location</span>
                            </div>
                            <div class="meta-item">
                                <i class="bi bi-ticket-perforated"></i>
                                <span>@Model.Count Ticket(s)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Booking Reference:</strong> @booking.BookingReference
                    <span class="ms-3">|</span>
                    <strong class="ms-3">Booking Date:</strong> @booking.BookingDate.ToString("MMM dd, yyyy")
                </div>
            </div>

            <!-- Tickets Grid -->
            <div class="tickets-grid">
                @foreach (var ticket in Model)
                {
                    <div class="ticket-card @(ticket.Status.ToString().ToLower())">
                        <!-- Ticket Header -->
                        <div class="ticket-header">
                            <div class="ticket-number">
                                <i class="bi bi-ticket-detailed me-2"></i>
                                Ticket #@ticket.TicketNumber
                            </div>
                            <span class="ticket-status @ticket.Status.ToString().ToLower()">
                                @if (ticket.Status == TicketStatus.Active)
                                {
                                    <i class="bi bi-check-circle me-1"></i>
                                    <text>Valid</text>
                                }
                                else if (ticket.Status == TicketStatus.Used)
                                {
                                    <i class="bi bi-check2-circle me-1"></i>
                                    <text>Used</text>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle me-1"></i>
                                    <text>@ticket.Status</text>
                                }
                            </span>
                        </div>

                        <!-- Ticket Body -->
                        <div class="ticket-body">
                            <!-- QR Code -->
                            <div class="qr-code-container">
                                @if (!string.IsNullOrEmpty(ticket.QRCode))
                                {
                                    <img src="data:image/png;base64,@ticket.QRCode"
                                         alt="Ticket QR Code"
                                         title="Show this QR code at entrance">
                                }
                                else
                                {
                                    <div style="width: 180px; height: 180px; background: #f1f5f9; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-qr-code" style="font-size: 3rem; color: #cbd5e1;"></i>
                                    </div>
                                }
                            </div>

                            <!-- Ticket Details -->
                            <div class="ticket-details">
                                <div class="detail-row">
                                    <span class="detail-label">Customer Name</span>
                                    <span class="detail-value">@booking.Customer.Name</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Event</span>
                                    <span class="detail-value">@eventInfo.Title</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Date & Time</span>
                                    <span class="detail-value">@eventInfo.EventDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Venue</span>
                                    <span class="detail-value">@venue.Name</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Issued Date</span>
                                    <span class="detail-value">@ticket.IssuedDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                @if (ticket.UsedDate.HasValue)
                                {
                                    <div class="detail-row">
                                        <span class="detail-label">Used Date</span>
                                        <span class="detail-value">@ticket.UsedDate.Value.ToString("MMM dd, yyyy 'at' hh:mm tt")</span>
                                    </div>
                                }
                            </div>

                            <!-- Ticket Actions -->
                            <div class="ticket-actions">
                                <a href="@Url.Action("Download", "Ticket", new { id = ticket.Id })"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-download me-1"></i>Download
                                </a>
                                <button type="button" class="btn btn-outline-secondary btn-sm"
                                        onclick="window.print()">
                                    <i class="bi bi-printer me-1"></i>Print
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="@Url.Action("DownloadTickets", "Ticket", new { bookingId = Model.First().BookingId })"
                   class="btn btn-primary btn-lg">
                    <i class="bi bi-download me-2"></i>Download All Tickets
                </a>
                <a href="@Url.Action("MyBookings", "Booking")" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Back to My Bookings
                </a>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="booking-info-card">
                <div class="empty-state">
                    <i class="bi bi-ticket-perforated"></i>
                    <h3>No Tickets Found</h3>
                    <p class="text-muted">The requested tickets could not be found.</p>
                    <a href="@Url.Action("MyBookings", "Booking")" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-left me-2"></i>Back to My Bookings
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        console.log('View Tickets page loaded');

        // Auto-print functionality (optional)
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('print') === 'true') {
            setTimeout(() => {
                window.print();
            }, 1000);
        }
    </script>
}
