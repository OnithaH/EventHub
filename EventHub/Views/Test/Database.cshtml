@{
    ViewData["Title"] = "Database Connection Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header @(ViewBag.Status == "Success" ? "bg-success" : "bg-danger") text-white">
                    <h3><i class="bi bi-database"></i> Database Connection Test</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Results != null)
                    {
                        @foreach (string result in ViewBag.Results)
                        {
                            <p class="mb-2">@result</p>
                        }
                    }

                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Insert")" class="btn btn-primary">Test Insert</a>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Database")" class="btn btn-secondary">Refresh Test</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>