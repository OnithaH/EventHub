@model EventHub.Models.Entities.Booking
@{
    ViewData["Title"] = "Booking Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/booking-details.css" asp-append-version="true" />
}

<!-- Booking Details Page -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Booking Info Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Booking Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Booking Reference:</strong>
                            <p>#@(Model.BookingReference ?? $"BK{Model.Id:D6}")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Booking Date:</strong>
                            <p>@Model.BookingDate.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Status:</strong>
                            <p>
                                <span class="badge @(Model.Status == BookingStatus.Confirmed ? "bg-success" : Model.Status == BookingStatus.Pending ? "bg-warning" : "bg-danger")">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Total Amount:</strong>
                            <p class="text-primary fw-bold fs-5">@Model.TotalAmount.ToString("C")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Event Details Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Event Details</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Event.ImageUrl))
                    {
                        <img src="@Model.Event.ImageUrl" alt="@Model.Event.Title" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: cover; width: 100%;" />
                    }
                    <h3>@Model.Event.Title</h3>
                    <div class="row mt-3">
                        <div class="col-md-6 mb-2">
                            <i class="bi bi-calendar3 text-primary me-2"></i>
                            <strong>Date:</strong> @Model.Event.EventDate.ToString("MMM dd, yyyy")
                        </div>
                        <div class="col-md-6 mb-2">
                            <i class="bi bi-clock text-primary me-2"></i>
                            <strong>Time:</strong> @Model.Event.EventDate.ToString("hh:mm tt")
                        </div>
                        <div class="col-md-6 mb-2">
                            <i class="bi bi-geo-alt text-primary me-2"></i>
                            <strong>Venue:</strong> @Model.Event.Venue.Name
                        </div>
                        <div class="col-md-6 mb-2">
                            <i class="bi bi-ticket-perforated text-primary me-2"></i>
                            <strong>Tickets:</strong> @Model.Quantity
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Info -->
            @if (Model.Payment != null)
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0"><i class="bi bi-credit-card me-2"></i>Payment Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Method:</strong> @Model.Payment.PaymentMethod
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Date:</strong> @Model.Payment.PaymentDate.ToString("MMM dd, yyyy")
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Transaction ID:</strong> @Model.Payment.TransactionId
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Status:</strong>
                                <span class="badge @(Model.Payment.Status == PaymentStatus.Completed ? "bg-success" : "bg-warning")">
                                    @Model.Payment.Status
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body d-grid gap-2">
                    @if (Model.Tickets != null && Model.Tickets.Any())
                    {
                        <a href="@Url.Action("ViewTickets", "Ticket", new { bookingId = Model.Id })" class="btn btn-primary">
                            <i class="bi bi-ticket-detailed me-2"></i>View Tickets
                        </a>
                    }
                    @if (Model.Payment != null)
                    {
                        <a href="@Url.Action("Receipt", "Payment", new { id = Model.Payment.Id })" class="btn btn-success">
                            <i class="bi bi-receipt me-2"></i>Download Receipt
                        </a>
                    }
                    <a href="@Url.Action("MyBookings", "Booking")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Bookings
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Customer Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Customer.Name</p>
                    <p><strong>Email:</strong> @Model.Customer.Email</p>
                    @if (!string.IsNullOrEmpty(Model.Customer.Phone))
                    {
                        <p><strong>Phone:</strong> @Model.Customer.Phone</p>
                    }
                    <p class="mb-0">
                        <strong>Loyalty Points:</strong>
                        <span class="badge bg-warning text-dark">@Model.Customer.LoyaltyPoints</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>