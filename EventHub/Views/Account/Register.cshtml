@model EventHub.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register - EventHub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-wrapper">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card">
                    <!-- Header -->
                    <div class="auth-header text-center mb-4">
                        <h2 class="fw-bold text-primary mb-2">Join EventHub</h2>
                        <p class="text-muted">Create your account to start discovering amazing events</p>
                    </div>

                    <!-- Multi-step Progress Indicator -->
                    <div class="progress-container mb-4">
                        <div class="progress-bar-custom">
                            <div class="step active" data-step="1">
                                <div class="step-number">1</div>
                                <div class="step-label">Personal Info</div>
                            </div>
                            <div class="step" data-step="2">
                                <div class="step-number">2</div>
                                <div class="step-label">Account Setup</div>
                            </div>
                            <div class="step" data-step="3">
                                <div class="step-number">3</div>
                                <div class="step-label">Complete</div>
                            </div>
                        </div>
                    </div>

                    <!-- Validation Summary -->
                    <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>

                    <form asp-action="Register" method="post" id="registrationForm" novalidate>
                        <!-- Step 1: Personal Information -->
                        <div class="form-step active" data-step="1">
                            <h4 class="step-title mb-3">Personal Information</h4>

                            <div class="form-floating mb-3">
                                <input asp-for="Name" class="form-control form-control-modern" id="nameInput"
                                       placeholder="Enter your full name" autocomplete="name">
                                <label for="nameInput" class="form-label">
                                    <i class="bi bi-person me-1"></i>Full Name
                                </label>
                                <span asp-validation-for="Name" class="invalid-feedback"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control form-control-modern"
                                       id="emailInput" placeholder="Enter your email address" autocomplete="email">
                                <label for="emailInput" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email Address
                                </label>
                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="Phone" type="tel" class="form-control form-control-modern"
                                       id="phoneInput" placeholder="Enter your phone number" autocomplete="tel">
                                <label for="phoneInput" class="form-label">
                                    <i class="bi bi-telephone me-1"></i>Phone Number
                                </label>
                                <span asp-validation-for="Phone" class="invalid-feedback"></span>
                            </div>

                            <div class="d-grid">
                                <button type="button" class="btn btn-primary btn-next" data-next="2">
                                    Continue <i class="bi bi-arrow-right ms-1"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Step 2: Account Setup -->
                        <div class="form-step" data-step="2">
                            <h4 class="step-title mb-3">Account Setup</h4>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control form-control-modern"
                                       id="passwordInput" placeholder="Create a secure password" autocomplete="new-password">
                                <label for="passwordInput" class="form-label">
                                    <i class="bi bi-lock me-1"></i>Password
                                </label>
                                <span asp-validation-for="Password" class="invalid-feedback"></span>
                                <div class="password-strength-indicator">
                                    <div class="strength-bar"></div>
                                    <small class="strength-text">Password strength: Weak</small>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-modern"
                                       id="confirmPasswordInput" placeholder="Confirm your password" autocomplete="new-password">
                                <label for="confirmPasswordInput" class="form-label">
                                    <i class="bi bi-lock-fill me-1"></i>Confirm Password
                                </label>
                                <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                            </div>

                            <div class="role-selection mb-4">
                                <label class="form-label mb-3">
                                    <i class="bi bi-person-badge me-1"></i>I want to join as:
                                </label>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="role-card">
                                            <input type="radio" asp-for="Role" value="Customer" id="customerRole" class="role-radio" checked>
                                            <label for="customerRole" class="role-label">
                                                <i class="bi bi-ticket-perforated"></i>
                                                <span class="role-title">Customer</span>
                                                <span class="role-description">Discover and book events</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="role-card">
                                            <input type="radio" asp-for="Role" value="Organizer" id="organizerRole" class="role-radio">
                                            <label for="organizerRole" class="role-label">
                                                <i class="bi bi-calendar-event"></i>
                                                <span class="role-title">Organizer</span>
                                                <span class="role-description">Create and manage events</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Role" class="invalid-feedback d-block"></span>
                            </div>

                            <div class="form-floating mb-4 company-field d-none">
                                <input asp-for="Company" class="form-control form-control-modern"
                                       id="companyInput" placeholder="Enter your company name">
                                <label for="companyInput" class="form-label">
                                    <i class="bi bi-building me-1"></i>Company Name
                                </label>
                                <span asp-validation-for="Company" class="invalid-feedback"></span>
                            </div>

                            <div class="d-grid gap-2 d-md-flex">
                                <button type="button" class="btn btn-outline-secondary btn-prev flex-fill" data-prev="1">
                                    <i class="bi bi-arrow-left me-1"></i> Back
                                </button>
                                <button type="button" class="btn btn-primary btn-next flex-fill" data-next="3">
                                    Continue <i class="bi bi-arrow-right ms-1"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Step 3: Terms & Complete -->
                        <div class="form-step" data-step="3">
                            <h4 class="step-title mb-3">Almost Done!</h4>

                            <div class="registration-summary mb-4">
                                <h6 class="mb-3">Registration Summary</h6>
                                <div class="summary-item">
                                    <strong>Name:</strong> <span id="summaryName">-</span>
                                </div>
                                <div class="summary-item">
                                    <strong>Email:</strong> <span id="summaryEmail">-</span>
                                </div>
                                <div class="summary-item">
                                    <strong>Phone:</strong> <span id="summaryPhone">-</span>
                                </div>
                                <div class="summary-item">
                                    <strong>Role:</strong> <span id="summaryRole">-</span>
                                </div>
                                <div class="summary-item company-summary d-none">
                                    <strong>Company:</strong> <span id="summaryCompany">-</span>
                                </div>
                            </div>

                            <div class="form-check mb-4">
                                <input type="checkbox" class="form-check-input" id="termsCheck" required>
                                <label class="form-check-label" for="termsCheck">
                                    I agree to the <a href="#" class="text-primary">Terms of Service</a> and
                                    <a href="#" class="text-primary">Privacy Policy</a>
                                </label>
                                <div class="invalid-feedback">Please accept the terms and conditions.</div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex">
                                <button type="button" class="btn btn-outline-secondary btn-prev flex-fill" data-prev="2">
                                    <i class="bi bi-arrow-left me-1"></i> Back
                                </button>
                                <button type="submit" class="btn btn-success flex-fill" id="submitBtn">
                                    <i class="bi bi-check-circle me-1"></i> Create Account
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Login Link -->
                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Already have an account?
                            <a href="@Url.Action("Login", "Account")" class="text-primary fw-bold">Sign in here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth.js"></script>
}