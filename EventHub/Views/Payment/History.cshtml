@* ============================================ *@

@model EventHub.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout - EventHub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .checkout-container {
            background: #f8fafc;
            padding: 3rem 0;
        }
        .checkout-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            padding: 2rem;
        }
        .order-summary {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            color: white;
            border-radius: 16px;
            padding: 2rem;
            position: sticky;
            top: 100px;
        }
        .summary-item {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }
        .summary-total {
            font-size: 1.5rem;
            font-weight: 700;
            padding-top: 1rem;
        }
        .payment-method-card {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .payment-method-card:hover {
            border-color: #6366f1;
            background: rgba(99, 102, 241, 0.05);
        }
        .payment-method-card.selected {
            border-color: #6366f1;
            background: rgba(99, 102, 241, 0.1);
        }
    </style>
}

<section class="checkout-container">
    <div class="container">
        <div class="row">
            <!-- Left Column - Payment Form -->
            <div class="col-lg-8">
                <div class="checkout-card mb-4">
                    <h3 class="mb-4">
                        <i class="bi bi-credit-card me-2"></i>Payment Information
                    </h3>

                    <form asp-action="ProcessPayment" asp-controller="Payment" method="post" id="paymentForm">
                        <input type="hidden" asp-for="BookingId" />
                        <input type="hidden" asp-for="Amount" />

                        <!-- Payment Method Selection -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">Select Payment Method</label>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="payment-method-card" onclick="selectPaymentMethod('CreditCard')">
                                        <input type="radio" name="PaymentMethod" value="CreditCard" id="credit" class="form-check-input me-2">
                                        <label for="credit" class="form-check-label">
                                            <i class="bi bi-credit-card text-primary me-2"></i>
                                            <strong>Credit/Debit Card</strong>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="payment-method-card" onclick="selectPaymentMethod('PayPal')">
                                        <input type="radio" name="PaymentMethod" value="PayPal" id="paypal" class="form-check-input me-2">
                                        <label for="paypal" class="form-check-label">
                                            <i class="bi bi-paypal text-primary me-2"></i>
                                            <strong>PayPal</strong>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Details (Show if Credit Card selected) -->
                        <div id="cardDetails" style="display: none;">
                            <div class="row g-3 mb-3">
                                <div class="col-12">
                                    <label class="form-label">Card Number</label>
                                    <input type="text" class="form-control" name="CardNumber" 
                                           placeholder="1234 5678 9012 3456" maxlength="19">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Expiry Date</label>
                                    <input type="text" class="form-control" name="ExpiryDate" 
                                           placeholder="MM/YY" maxlength="5">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">CVV</label>
                                    <input type="text" class="form-control" name="CVV" 
                                           placeholder="123" maxlength="3">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Cardholder Name</label>
                                    <input type="text" class="form-control" name="CardholderName" 
                                           placeholder="John Doe">
                                </div>
                            </div>
                        </div>

                        <!-- Billing Information -->
                        <div class="mb-4">
                            <h5 class="mb-3">Billing Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" asp-for="FirstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" asp-for="LastName" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" asp-for="Email" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Phone</label>
                                    <input type="tel" class="form-control" asp-for="Phone" required>
                                </div>
                            </div>
                        </div>

                        <!-- Discount Code -->
                        <div class="mb-4">
                            <label class="form-label">Discount Code (Optional)</label>
                            <div class="input-group">
                                <input type="text" class="form-control" asp-for="DiscountCode" 
                                       placeholder="Enter discount code">
                                <button type="button" class="btn btn-outline-secondary" onclick="applyDiscount()">
                                    Apply
                                </button>
                            </div>
                        </div>

                        <!-- Loyalty Points -->
                        @if (Model.AvailableLoyaltyPoints > 0)
                        {
                            <div class="mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="UseLoyaltyPoints" 
                                           id="useLoyalty" onchange="toggleLoyaltyPoints()">
                                    <label class="form-check-label" for="useLoyalty">
                                        Use Loyalty Points (@Model.AvailableLoyaltyPoints available)
                                    </label>
                                </div>
                                <small class="text-muted">
                                    Each point = $0.10 discount
                                </small>
                            </div>
                        }

                        <!-- Terms & Conditions -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="#">Terms & Conditions</a> and 
                                    <a href="#">Cancellation Policy</a>
                                </label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-lock-fill me-2"></i>
                                Complete Payment - @Model.Amount.ToString("C")
                            </button>
                            <a href="@Url.Action("Details", "Booking", new { id = Model.BookingId })" 
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Booking
                            </a>
                        </div>
                    </form>
                </div>

                <!-- Security Notice -->
                <div class="alert alert-info">
                    <i class="bi bi-shield-check me-2"></i>
                    <strong>Secure Payment:</strong> Your payment information is encrypted and secure. 
                    We never store your credit card details.
                </div>
            </div>

            <!-- Right Column - Order Summary -->
            <div class="col-lg-4">
                <div class="order-summary">
                    <h4 class="mb-4">
                        <i class="bi bi-receipt me-2"></i>Order Summary
                    </h4>

                    <!-- Event Info -->
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.EventImageUrl))
                        {
                            <img src="@Model.EventImageUrl" class="img-fluid rounded mb-3" 
                                 alt="@Model.EventTitle">
                        }
                        <h5 class="mb-2">@Model.EventTitle</h5>
                        <p class="mb-1">
                            <i class="bi bi-calendar3 me-2"></i>
                            @Model.EventDate.ToString("MMM dd, yyyy")
                        </p>
                        <p class="mb-1">
                            <i class="bi bi-clock me-2"></i>
                            @Model.EventDate.ToString("hh:mm tt")
                        </p>
                        <p class="mb-0">
                            <i class="bi bi-geo-alt me-2"></i>
                            @Model.VenueName
                        </p>
                    </div>

                    <hr class="border-light">

                    <!-- Price Breakdown -->
                    <div class="summary-item">
                        <span>Ticket Price</span>
                        <span>@Model.TicketPrice.ToString("C")</span>
                    </div>
                    <div class="summary-item">
                        <span>Quantity</span>
                        <span>× @Model.Quantity</span>
                    </div>
                    <div class="summary-item">
                        <span>Subtotal</span>
                        <span>@Model.Subtotal.ToString("C")</span>
                    </div>
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="summary-item text-success">
                            <span>Discount</span>
                            <span>-@Model.DiscountAmount.ToString("C")</span>
                        </div>
                    }
                    @if (Model.LoyaltyPointsUsed > 0)
                    {
                        <div class="summary-item text-success">
                            <span>Loyalty Points</span>
                            <span>-@Model.LoyaltyPointsDiscount.ToString("C")</span>
                        </div>
                    }
                    <div class="summary-item">
                        <span>Service Fee</span>
                        <span>@Model.ServiceFee.ToString("C")</span>
                    </div>

                    <hr class="border-light">

                    <!-- Total -->
                    <div class="summary-total d-flex justify-content-between">
                        <span>Total Amount</span>
                        <span>@Model.Amount.ToString("C")</span>
                    </div>

                    <!-- Points to Earn -->
                    <div class="mt-3 p-3 bg-white bg-opacity-10 rounded">
                        <small>
                            <i class="bi bi-star-fill me-2"></i>
                            You'll earn <strong>@Model.PointsToEarn</strong> loyalty points with this purchase!
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        function selectPaymentMethod(method) {
            // Remove selected class from all cards
            document.querySelectorAll('.payment-method-card').forEach(card => {
                card.classList.remove('selected');
            });

            // Add selected class to clicked card
            event.currentTarget.classList.add('selected');

            // Show/hide card details
            const cardDetails = document.getElementById('cardDetails');
            if (method === 'CreditCard') {
                cardDetails.style.display = 'block';
            } else {
                cardDetails.style.display = 'none';
            }
        }

        function applyDiscount() {
            const code = document.querySelector('[name="DiscountCode"]').value;
            if (!code) {
                Swal.fire('Error', 'Please enter a discount code', 'error');
                return;
            }

            // TODO: Implement discount code validation
            Swal.fire('Success', 'Discount code applied!', 'success');
        }

        function toggleLoyaltyPoints() {
            const checkbox = document.getElementById('useLoyalty');
            // TODO: Recalculate total amount
        }

        // Card number formatting
        document.querySelector('[name="CardNumber"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formattedValue;
        });

        // Expiry date formatting
        document.querySelector('[name="ExpiryDate"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        // Form validation before submit
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            const paymentMethod = document.querySelector('[name="PaymentMethod"]:checked');
            if (!paymentMethod) {
                e.preventDefault();
                Swal.fire('Error', 'Please select a payment method', 'error');
                return;
            }

            const terms = document.getElementById('terms');
            if (!terms.checked) {
                e.preventDefault();
                Swal.fire('Error', 'Please accept the terms and conditions', 'error');
                return;
            }

            // Show loading
            Swal.fire({
                title: 'Processing Payment...',
                html: 'Please wait while we process your payment',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        });
    </script>
}