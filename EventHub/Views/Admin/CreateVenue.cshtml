@model Venue
@{
    ViewData["Title"] = "Create Venue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin-styles.css" asp-append-version="true" />
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Create New Venue
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateVenue" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Venue Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Colombo Convention Center" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Location/City</label>
                            <input asp-for="Location" class="form-control" placeholder="e.g., Colombo, Sri Lanka" required />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Full Address</label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter complete address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">Capacity (Number of persons)</label>
                            <input asp-for="Capacity" type="number" class="form-control" min="1" required />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Create Venue
                            </button>
                            <a asp-action="ManageVenues" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}