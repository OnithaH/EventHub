@model EventHub.Models.ViewModels.AdminVenuesListViewModel
@{
    ViewData["Title"] = "Manage Venues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/admin-styles.css" asp-append-version="true" />
}
<div class="container-fluid px-4 py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-geo-alt me-2"></i>Manage Venues
            </h1>
            <p class="text-muted mb-0">View and manage all event venues</p>
        </div>
        <a asp-action="CreateVenue" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Add New Venue
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded p-3">
                                <i class="bi bi-building text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Venues</h6>
                            <h3 class="mb-0">@Model.TotalVenues</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded p-3">
                                <i class="bi bi-calendar-check text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Venues with Events</h6>
                            <h3 class="mb-0">@Model.VenuesWithEvents</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="ManageVenues">
                <div class="row g-2">
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="searchTerm"
                               value="@Model.SearchTerm" placeholder="Search venues by name, location, or address">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-1"></i>Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Venues Grid -->
    @if (Model.Venues.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model.Venues)
            {
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">@item.Venue.Name</h5>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-geo-alt me-1"></i>@item.Venue.Location
                                    </p>
                                </div>
                                @if (item.HasActiveEvents)
                                {
                                    <span class="badge bg-success">Active Events</span>
                                }
                            </div>

                            <div class="mb-3">
                                <p class="mb-1">
                                    <strong>Address:</strong> @(item.Venue.Address ?? "Not specified")
                                </p>
                                <p class="mb-0">
                                    <strong>Capacity:</strong> @item.Venue.Capacity persons
                                </p>
                            </div>

                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <div class="border rounded p-2">
                                        <h6 class="mb-0">@item.EventCount</h6>
                                        <small class="text-muted">Total Events</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border rounded p-2">
                                        <h6 class="mb-0">@item.ActiveEventCount</h6>
                                        <small class="text-muted">Active</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border rounded p-2">
                                        <h6 class="mb-0">@item.UpcomingEventCount</h6>
                                        <small class="text-muted">Upcoming</small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="EditVenue" asp-route-id="@item.Venue.Id"
                                   class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger flex-fill"
                                        onclick="deleteVenue(@item.Venue.Id)"
                                        @(item.HasActiveEvents ? "disabled" : "")>
                                    <i class="bi bi-trash me-1"></i>Delete
                                </button>
                            </div>

                            @if (item.HasActiveEvents)
                            {
                                <small class="text-danger d-block mt-2">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    Cannot delete venue with active events
                                </small>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <small class="text-muted">
                                Created: @item.Venue.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-building-x display-1 text-muted"></i>
                <h5 class="mt-3">No venues found</h5>
                <p class="text-muted">Start by creating a new venue</p>
                <a asp-action="CreateVenue" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-1"></i>Create First Venue
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteVenue(venueId) {
            Swal.fire({
                title: 'Delete Venue?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("DeleteVenue", "Admin")',
                        type: 'POST',
                        data: {
                            id: venueId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire('Deleted!', response.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error!', response.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Error!', 'An error occurred', 'error');
                        }
                    });
                }
            });
        }
    </script>
}